{
  "name": "averaged-perceptron",
  "version": "1.0.2",
  "description": "A linear classifier with the averaged perceptron algorithm",
  "keywords": [
    "artificial intelligence",
    "average",
    "classification",
    "classify",
    "linear",
    "machine learning",
    "model",
    "perceptron"
  ],
  "homepage": "https://github.com/rtomrud/averaged-perceptron#readme",
  "bugs": {
    "url": "https://github.com/rtomrud/averaged-perceptron/issues"
  },
  "license": "MIT",
  "author": "Artem Rudenko <rtomrud@gmail.com>",
  "files": [
    "dist",
    "index.js"
  ],
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rtomrud/averaged-perceptron.git"
  },
  "scripts": {
    "build": "rollup -i index.js -o dist/index.js -f cjs",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "prepare": "npm run build",
    "test": "nyc --reporter html tape -r esm index.test.js | faucet && nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "array-shuffle": "1.0.1",
    "coveralls": "3.0.6",
    "eslint": "6.3.0",
    "eslint-config-pretty-strict": "4.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "esm": "3.2.25",
    "faucet": "0.0.1",
    "husky": "3.0.5",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rollup": "1.20.3",
    "tape": "4.11.0"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/eslint-config-pretty-strict/index.js"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "root": true
  },
  "eslintIgnore": [
    "coverage",
    "dist"
  ],
  "esm": {
    "sourceMap": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
